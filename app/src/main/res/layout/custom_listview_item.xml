<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/myTravels_thumbnail"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/ic_recreation"/>

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="ESTE é UM TESTE"
        android:layout_toEndOf="@+id/myTravels_thumbnail"/>

    <TextView
        android:id="@+id/txt_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"

        android:text="ESTE é UM TESTE"

        android:layout_toEndOf="@+id/myTravels_thumbnail"
        android:layout_below="@+id/txt_title"/>

    <TextView
        android:id="@+id/txt_totalSpend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"

        android:text="ESTE é UM TESTE"
        android:layout_toEndOf="@+id/myTravels_thumbnail"
        android:layout_below="@+id/txt_duration"/>

</RelativeLayout>