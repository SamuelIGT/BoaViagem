<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/list_view_expenses_shape"
    android:layout_marginBottom="10dp">

    <TextView
        android:id="@+id/txt_cost_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="24sp"
        android:textAlignment="textEnd"
        android:paddingEnd="20dp"
        android:text="tesxte"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingStart="10dp"
        android:textSize="24sp"
        android:text="Data:"/>

    <TextView
        android:id="@+id/txt_cost_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_cost_date"
        android:paddingStart="10dp"
        android:textSize="24sp"
        android:text="testeet"/>
    <TextView
        android:id="@+id/txt_cost_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_cost_title"
        android:paddingStart="10dp"
        android:textSize="24sp"
        android:text="testeet"/>

</RelativeLayout>